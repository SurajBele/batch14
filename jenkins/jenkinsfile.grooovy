pipeline {
    agent {
        label 'node1'
    }
    stages {
        stage('pull') {
            steps {
                git branch: 'main', url: 'https://github.com/SurajBele/studentdata.git'
                echo "pulling successful"
            }
        }
        stage('Build') {
            steps {
                sh 'sudo /opt/apache-maven-3.9.11/bin/mvn clean package'
                echo "building successful"
            }
        }
        stage('Test') {
            steps {

                withSonarQubeEnv( installationName: 'sonar-server', credentialsId: 'sonar-token') {
                sh '/opt/apache-maven-3.9.11/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=myproject -Dsonar.projectName='myproject''
                }
                echo "testing successful"
            }
        }
        stage('Deploy') {
            steps {
                echo "deployment successful"
            }
        }
    }
}